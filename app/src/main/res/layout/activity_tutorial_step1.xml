<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    tools:context="com.una.takeurpills.TutorialStep1Activity">

    <include layout="@layout/branding"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margintop_branding"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bc_text_steps"
        android:paddingTop="16dp"
        android:paddingBottom="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paso 1:"
            android:textSize="56sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/tv_steps"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Llena la información de tú tratamiento."
            android:textSize="32sp"
            android:textAlignment="center"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:textColor="@color/tv_steps"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next step"
        android:textSize="32sp"
        android:textColor="@android:color/white"
        android:padding="24dp"
        android:layout_gravity="center"
        android:layout_marginTop="-40dp"
        android:background="@color/bt_steps_nextStep"/>

    <TextView
        android:id="@+id/tvStepsSaltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saltar ->"
        android:textSize="16sp"
        android:textColor="@color/tv_steps_saltar"
        android:layout_gravity="center"
        android:layout_marginTop="32dp" />

</LinearLayout>

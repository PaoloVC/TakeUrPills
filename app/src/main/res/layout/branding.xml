<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_logo_homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pill_logo"
        android:layout_marginTop="@dimen/margintop_branding"/>

    <TextView
        android:id="@+id/text_header_homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_homepage"
        android:textColor="@color/color_header_homepage"
        android:textSize="@dimen/texSize_header_homepage"
        android:layout_marginTop="@dimen/margintop_header_homepage"
        app:layout_constraintLeft_toRightOf="@id/image_logo_homepage"
        app:layout_constraintTop_toTopOf="@id/image_logo_homepage"/>

    <TextView
        android:id="@+id/text_slogan_homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slogan_homepage"
        android:textColor="@android:color/black"
        android:textSize="@dimen/texSize_slogan_homepage"
        android:layout_marginLeft="@dimen/marginleft_slogan_homepage"
        app:layout_constraintLeft_toRightOf="@id/image_logo_homepage"
        app:layout_constraintTop_toBottomOf="@id/text_header_homepage"/>



</android.support.constraint.ConstraintLayout>